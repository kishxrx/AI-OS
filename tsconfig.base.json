{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "baseUrl": ".",
    "lib": ["ES2021", "DOM"],
    "paths": {
      "@app/*": ["dist/libs/*", "libs/*/src"],
      "@app/common-types": ["dist/libs/common-types", "libs/common-types/src"]
    },
    "typeRoots": ["./types", "node_modules/@types"]
  }
}
