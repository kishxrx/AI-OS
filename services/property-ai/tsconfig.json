{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/services/property-ai",
    "rootDir": "./src",

    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "../../dist/services/property-ai/.tsbuildinfo",

    "target": "ES2021",
    "module": "commonjs",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "plugins": [
      { "transform": "@nestjs/swagger/plugin" }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*spec.ts"],
  "references": [
    { "path": "../../libs/common-types" }
  ]
}
